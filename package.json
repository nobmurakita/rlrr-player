{
  "name": "rlrr-player",
  "version": "0.0.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac --universal --publish=never",
    "build:win": "electron-builder --win --x64 --publish=never"
  },
  "build": {
    "appId": "io.github.nobmurakita.rlrr-player",
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "package.json",
      "package-lock.json"
    ],
    "extraResources": [
      "index.ejs",
      "public/**"
    ],
    "mac": {
      "electronLanguages": [
        "ja"
      ],
      "target": "zip"
    },
    "win": {
      "electronLanguages": [
        "ja"
      ],
      "target": "zip"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "ejs": "^3.1.9",
    "electron-store": "^8.2.0",
    "glob": "^10.3.10",
    "hono": "^4.1.0"
  },
  "devDependencies": {
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3"
  }
}
